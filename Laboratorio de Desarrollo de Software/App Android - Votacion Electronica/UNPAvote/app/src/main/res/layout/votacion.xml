<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top|center_vertical"
    tools:context="com.mixsoft.unpavote.Votacion"
    android:baselineAligned="false"
    tools:ignore="MissingPrefix"
    android:orientation="vertical"
    >
    <include layout="@layout/toolbar"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_15"
        >
        <TextView
            android:id="@+id/tv_titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/vot_txt_titulo"
            android:textSize="@dimen/sp_35"
            android:textAlignment="center"
            fontPath="fonts/Existence.ttf"
            />
        <TextView
            android:id="@+id/tv_descripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/vot_txt_fecha"
            android:textSize="@dimen/sp_20"
            android:textAlignment="center"
            fontPath="fonts/Existence.ttf"
            />
    </LinearLayout>

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:layout_weight="1"
        >
        <TableLayout
            android:id="@+id/tabla_scroll"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:stretchColumns="1"
            >

        </TableLayout>
    </ScrollView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        >
        <Button
            android:id="@+id/btn_blanco"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/vot_txt_blanco"
            android:background="@color/grisazulado"
            android:textColor="@color/blanco"
            android:textSize="@dimen/sp_30"
            android:padding="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_5"
            style="?android:attr/borderlessButtonStyle"
            fontPath="fonts/Existence.ttf"
            />
        <Button
            android:id="@+id/btn_nulo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/vot_txt_nulo"
            android:background="@color/grisazulado"
            android:textColor="@color/negro_mate"
            android:textSize="@dimen/sp_30"
            android:padding="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_5"
            style="?android:attr/borderlessButtonStyle"
            fontPath="fonts/Existence.ttf"
            />
    </LinearLayout>
</LinearLayout>
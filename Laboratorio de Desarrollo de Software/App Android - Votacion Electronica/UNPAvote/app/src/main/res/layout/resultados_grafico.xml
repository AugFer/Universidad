<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top|center_vertical"
    tools:context="com.mixsoft.unpavote.Resultados_grafico"
    tools:ignore="MissingPrefix"
    android:orientation="vertical">
    <include layout="@layout/toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="@dimen/dp_10"
        >
        <TextView
            android:id="@+id/tv_titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/res_toolbar_titulo"
            android:textSize="@dimen/sp_25"
            android:textAlignment="center"
            fontPath="fonts/Existence.ttf"
            />
        <TextView
            android:id="@+id/tv_descripcion"
            android:text="@string/res_descripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_20"
            android:textAlignment="center"
            fontPath="fonts/Existence.ttf"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="@dimen/dp_10"
        android:layout_weight="1"
        >
        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/graficoTorta"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="bottom"
        android:layout_gravity="bottom"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        >
        <Button
            android:id="@+id/btn_resultados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/res_btn_resultados_actualizar"
            android:background="@color/celeste_claro"
            android:textColor="@color/blanco"
            android:textSize="@dimen/sp_20"
            android:textAlignment="center"
            android:padding="@dimen/dp_15"
            style="?android:attr/borderlessButtonStyle"
            />
    </LinearLayout>

</LinearLayout>